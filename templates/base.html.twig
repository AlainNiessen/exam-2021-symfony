<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# implémentation Bootstrap et CSS#}
        {% block stylesheets %}
            <link 
                href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
                rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
                crossorigin="anonymous">
            <link
                href="{{ asset('css/screen.css') }}"
                rel="stylesheet"
                type="text/css"
        {% endblock %}

        {% block javascripts %}
           
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('home') }}">Catalogue Symfony</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('home') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Livres</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('genreListe') }}">Genres</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Création livre</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('genreFormCreation') }}">Création Genre</a>
                    </li>                    
                </ul>
            </div>
        </nav>
        {# message de réussite pour création + update + supprimer#}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% block body %}{% endblock %}
    </body>
</html>
